<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffcd2626"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请选择宿舍楼号"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/title_back"
            android:background="#A71717"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/number5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5号楼"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/number8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number5"
            android:text="8号楼"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/number9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number8"
            android:text="9号楼"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/number13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number9"
            android:text="13号楼"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/number14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number13"
            android:text="14号楼"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number14"
            android:text="查询当前剩余床位"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>


</RelativeLayout>
